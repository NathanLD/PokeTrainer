<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_trainers">

    <Button
        android:id="@+id/addTrainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addTrainer"
        tools:layout_editor_absoluteX="match_parent"
        tools:layout_editor_absoluteY="match_parent" />

    <ListView
        android:id="@+id/listTrainers"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
